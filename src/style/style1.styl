*
    margin 0
    padding 0
    list-style none
    box-sizing border-box
    -webkit-user-select none
    font-family 'Josefin Sans', sans-serif
#app h5
    color #FFE153
#Home
    background-attachment fixed
.slider-item
    transform scale(0.8)
    transition-timing-function ease
    transition-duration 300ms
    width 70% !important
    height 700px !important

.slider-item.slider-active 
    transform scale(1.0)
    z-index  999

.slider-item.slider-active-copy 
    transform scale(1.0)
    z-index  999
.slider-container
    margin auto !important
.swiper-container-horizontal>.slider-pagination-bullets
    bottom 60px !important
.swiper-container-horizontal>*>.slider-pagination-bullet
    background white !important
.carousel
	position fixed
	z-index 0
.navbar
    height 80px
    width 100vw
    padding-left 255px
    padding-right 0
.navbar-nav>.btn>h6
    color salmon !important
    font-size 25px
    margin-left 15px
    margin-right 15px
.navbar-nav>.btn>h6:hover
    color #000000 !important

.logo
    color red !important

.menu-box
    background-attachment fixed
    position absolute
    top 89px
    width 100%
    background rgba(0,0,0,0.2)
    z-index 9999
    animation drop-down 0.5s ease forwards

@keyframes btn
    0%
        height 0%
    100%
        height 81px
@keyframes drop-down
    0%
        height 0%
    100%
        height 300px

.new
    height 100vh
    flex-direction column
    position relative
    z-index 1000 

.ad
    display flex
    justify-content center
    align-items center
.ad .view
    position relative
    overflow hidden
    width 400px
    margin 20px auto 20px auto
    // box-shadow 2px 2px 5px #000000

.ad .view .text
    color white
    padding 0
    /* 文字決對定位 */
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    display flex
    justify-content center
    flex-direction column
    width 400px
.ad .view img
    transition 0.5s
    width 400px
    height 300px

.ad .view:hover img
    transform scale(1.2)


.ad .view:hover .text
    background-color rgba(0,0,0,0.5)

.ad .col-6
    margin-top 10px
    margin-bottom 10px
