    margin-top 20px

.stamp
    width 240px
    height 140px
    display inline-block
    padding 10px
    background white
    position: relative
    top 150px
    left 100px
    filter drop-shadow(0 0 10px rgba(0,0,0,0.5))
    background radial-gradient( transparent, transparent 6px, #fff 6px, #fff )-10px -10px;
    background-size 20px 20px 
    background-position -10px -10px 
    font-size 40px
    font-weight bolder

.stamp::after
    content ''
    position absolute
    left 5px
    top 5px
    right 5px
    bottom 5px
    z-index -3
.stamp::before
    content ''
    position absolute
    left 6px
    top 6px
    right 5px
    bottom 5px
    background white
    width 220px
    height 120px
    z-index -2

